<div class="fix-top">
  <%= render "shared/translator" %>

  <% unless @current_word.nil? %>
    <div id="translation-answer">
      <p>word: <%= @current_word.entry %></p>
      <p>translation: <%= @current_word.translation %></p>
      <p>example: <%= @current_word.example %></p>
      <p>definition: <%= @current_word.definition %></p>
      <p>synonyms: <%= @current_word.synonyms %></p>
      <p>difficulty: <%= @current_word.difficulty %>/10</p>
      <div class="dropdown">
        <a class="btn btn-secondary dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          Add to List
        </a>
        <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
          <% current_user.lists.each do |list| %>
            <%= link_to list.title, words_path, class: "dropdown-item" %>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>

  <div id="language-infos">
    <div class="d-flex justify-content-center my-3">
      <div class="list-title">
        <p><strong>List of the Week</strong></p>
      </div>
    </div>

    <div class="d-flex justify-content-between px-5 my-1 align-items-center">
      <%= @list.order ? "Français" : "Anglais" %>
      <%= link_to list_order_path(@list), method: :put do %>
        <i class="fas fa-exchange-alt"></i>
      <% end %>
      <%= @list.order ? "Anglais" : "Français" %>
    </div>

  </div>
</div>

<div class="all-words">
  <%= render "shared/index-words" %>
</div>
