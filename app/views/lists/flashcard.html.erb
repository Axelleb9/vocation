<div class="flashcard-display">

  <div class="top-part">

    <div class="list-title">
      <p><%= @list.title %></p>
    </div>

    <div class="general-progress">
      <p>You have mastered X words out of <%= @list.flashcard.count %> words</p>
      <div class="show-progress">
        <p>green</p>
      </div>
    </div>
    <div class="general-progress">
      <p>You are learning X words out of <%= @list.flashcard.count %> words</p>
      <div class="show-progress">
        <p>red</p>
      </div>
    </div>
  </div>


  <div class="flashcard-container">
    <div class="flashcard">

      <div class="flashcard-content">
        <div id="flashcard-question">
          <%= @word.entry %>
        </div>
        <div id="flashcard-answer" class="d-none"><%= @word.translation %>
        </div>
      </div>

      <div id="flashcard-button">
        <div id="see-meaning">
          <a href="#"> Tap to see meaning </a>
        </div>
        <div id="wrong-answer" class="d-none">
          <span> <%= link_to "I suck", list_wrong_answer_path(word_id: @word.id), method: :patch %> </span>

        </div>
        <div id="good-answer" class="d-none">
          <span> <%= link_to "I knew it!", list_good_answer_path(word_id: @word.id), method: :patch %> </span>

        </div>
      </div>

    </div>
  </div>
</div>
