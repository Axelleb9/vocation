<div class="container">	
	<div id="title-lists">
    <div class="calltoaction">
		  <h1>Lists</h1>
      <i class="fas fa-plus" id="highpage"></i>
    </div>
		<%= simple_form_for :search, url: root_path, method: :get do |f| %>
		  <div class="search-form-control form-group">
		    <input class="form-control string required" type="text" name="search[query]" id="search_query" />
		    <button name="button" type="submit" class="btn btn-flat">
		      <i class="fas fa-search"></i> Search
		    </button>
		  </div>
    <% end %>
  </div>

  <div class="menu">
    <ul class="list-inline tabs-underlined">
      <li>
         <%= link_to "My lists", lists_path, class: "tab-underlined active" %>
      </li>
      <li>
       <a href="" style="color: black">List of the week</a>
      </li>
    </ul>
  </div>

  <div class="content">
  	<div class="card-container">
			<% @lists.each do |list| %>
			  <div class="card-list">
			  	<% if policy(list).show? %>
            <div class="listcard">
  			  	  <i id="list-icon" class="fas fa-list"></i>
  			      <h6 class="ml-3"><%= link_to list.title, list_path(list), style:"color: black" %></h6>
              <p id="wordslist"><i>(<%= list.words.count %> words)</i></p>
            </div>
            <i class="fas fa-ellipsis-h" id="dropdownMenu" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"></i>
            <div class="dropdown-menu" aria-labelledby="dropdownMenu">
              <%= link_to "Rename", edit_list_path(list), class: "dropdown-item" %>
              <%= link_to "Delete", list_path(list), method: :delete, class: "dropdown-item" %>
            </div>
			    <% end %>
			  </div>
			<% end %>  
		</div>
  </div>
</div>

