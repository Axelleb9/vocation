<div class="container">	
	<div id="title-lists">
		<h1>Lists</h1>
		<%= simple_form_for :search, url: root_path, method: :get do |f| %>
		  <div class="search-form-control form-group">
		    <input class="form-control string required" type="text" name="search[query]" id="search_query" />
		    <button name="button" type="submit" class="btn btn-flat">
		      <i class="fas fa-search"></i> Search
		    </button>
		  </div>
    <% end %>
  </div>

  <div class="menu">
    <ul class="list-inline tabs-underlined">
      <li>
         <%= link_to "My lists", lists_path, class: "tab-underlined active" %>
      </li>
      <li>
       <a href="" style="color: black">List of the week</a>
      </li>
    </ul>
  </div>

  <div class="content">
  	<div class="card-container">
			<% @lists.each do |list| %>
			  <div class="card-list">
			  	<% if policy(list).show? %>
			  	  <i id="list-icon" class="fas fa-list"></i>
			      <h6><%= link_to list.title, list_path(list), style:"color: black" %></h6>
			    <% end %>
			    <p><%= list.words.count %> words</p> 
			  </div>
			<% end %>  
		</div>
  </div>
</div>


