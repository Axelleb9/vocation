<div class="d-flex justify-content-center align-items-center" style="margin-top:30px;">
  <div class="hint-definition"><h3><%= @entry %></h3></div>
  <div class="question4"><h3>means:</h3></div>
</div>

<div class="all-answers">
  <% [@quizz_good_answer, @quizz_wrong_answers].flatten.shuffle.each do |answer| %>
    <div class="possible-answer-definition">
      <p><%= answer %></p>
      <% if answer ==  @quizz_good_answer %>
        <%= link_to '', list_quizz_good_answer_path(list_id: @list.id, word_id: @word_list.word.id), method: :patch, class: "stretched-link" %>
      <% else %>
        <%= link_to '', list_quizz_wrong_answer_path(list_id: @list.id, word_id: @word_list.word.id), method: :patch, class: "stretched-link" %>
      <% end %>
    </div>
  <% end %>
</div>
