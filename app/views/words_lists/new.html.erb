<div id="highaddtolist">
  <%= link_to "Back", request.referrer, id: "lien" %>
 <h5 id="add-to-list">Add to List</h5>
</div>
<div id="head-of-page">
  <h6 id="new_word">New word:</h6>
  <h6 id="word_entry"><%= @word.entry %></h6>
</div>
  <div class="card-container">
    <% current_user.lists.each do |list| %>
      <div class="card-list">
        <div class="listcard">
          <i id="list-icon" class="fas fa-list"></i>
          <h6><%= link_to list.title, word_add_to_list_path(@word, list_id: list), method: :post, style:"color: black" %></h6>
            <p id="wordslist"><i>(<%= list.words.count %> words)</i></p>
        </div>
      </div>
    <% end %>
  </div>
