<% @list&.words&.each_with_index do |word, index| %>
  <div class="word-card-container">

    <div class="word-card">
      <p id="word-entry"> <%= @list.switch ? word.entry : word.translation %> </p>


      <div class="hide-show">
        <% if word.votes_for.where(voter_id: current_user.id).empty? %>
         <%= link_to word_close_eye_path(word) do  %>
          <i class="fas fa-eye"></i>
         <% end %>
         <p id="word-result"> <%= @list.switch ? word.translation : word.entry %></p>
        <% elsif word.votes_for.where(voter_id: current_user.id).first.vote_flag == true %>
          <%= link_to word_close_eye_path(word) do  %>
            <i class="fas fa-eye"></i>
          <% end %>
          <p id="word-result"> <%= @list.switch ? word.translation : word.entry %></p>
          <% else %>
          <%= link_to word_open_eye_path(word) do  %>
            <i class="fas fa-eye-slash"></i>
         <% end %>
        <% end %>
      </div>
    </div>

    <div class="display-content">
      <i id="test" class="fas fa-chevron-down chevron-icon chevron-selector" ></i>
    </div>

    <div id="word-card-carousel<%= index %>" class="carousel slide carousel-word-card" data-ride="carousel" data-interval='false'>
      <ol class="carousel-indicators">
        <li data-target="#word-card-carousel<%= index %>" data-slide-to="0" class="active"></li>
        <li data-target="#word-card-carousel<%= index %>" data-slide-to="1"></li>
        <li data-target="#word-card-carousel<%= index %>" data-slide-to="2"></li>
      </ol>
      <div class="carousel-inner">
        <ul class="nav nav-tabs">
          <% user_word = UserWord.where(user: current_user, word: word).take %>

          <% unless word.meaning.nou.nil? %>
            <% if user_word.state == "nou" %>
              <li class="nav-item">
                <%= link_to "noun", word_change_state_to_nou_path(word), method: :post, class: "nav-link active"%>
              </li>
            <% else %>
              <li class="nav-item">
                <%= link_to "noun", word_change_state_to_nou_path(word), method: :post, class: "nav-link" %>
              </li>
            <% end %>
          <% end %>

          <% unless word.meaning.adj.nil? %>
            <% if user_word.state == "adj" %>
              <li class="nav-item">
                <%= link_to "adj", word_change_state_to_adj_path(word), method: :post, class: "nav-link active" %>
              </li>
            <% else %>
              <li class="nav-item">
                <%= link_to "adj", word_change_state_to_adj_path(word), method: :post, class: "nav-link" %>
              </li>
            <% end %>
          <% end %>

          <% unless word.meaning.vrb.nil? %>
            <% if user_word.state == "vrb" %>
              <li class="nav-item">
                <%= link_to "vrb", word_change_state_to_vrb_path(word), method: :post, class: "nav-link active" %>
              </li>
            <% else %>
              <li class="nav-item">
                <%= link_to "vrb", word_change_state_to_vrb_path(word), method: :post, class: "nav-link" %>
              </li>
            <% end %>
          <% end %>

          <% unless word.meaning.adv.nil? %>
            <% if user_word.state == "adv" %>
              <li class="nav-item">
                <%= link_to "adv", word_change_state_to_adv_path(word), method: :post, class: "nav-link active" %>
              </li>
            <% else %>
              <li class="nav-item">
                <%= link_to "adv", word_change_state_to_adv_path(word), method: :post, class: "nav-link active" %>
              </li>
            <% end %>
          <% end %>

        </ul>

        <% case user_word.state %>
        <% when "nou" %>
          <% word.meaning.nou&.first(3)&.each_with_index do |meaning, i| %>
            <div class="carousel-item <%= 'active' if i == 0 %>">
              <%= render 'shared/word-card', word: word, index: i, meaning: meaning %>
            </div>
          <% end %>
        <% when "vrb" %>
          <% word.meaning.vrb&.first(3)&.each_with_index do |meaning, i| %>
            <div class="carousel-item <%= 'active' if i == 0 %>">
              <%= render 'shared/word-card', word: word, index: i, meaning: meaning %>
            </div>
          <% end %>
        <% when "adj" %>
          <% word.meaning.adj&.first(3)&.each_with_index do |meaning, i| %>
            <div class="carousel-item <%= 'active' if i == 0 %>">
              <%= render 'shared/word-card', word: word, index: i, meaning: meaning %>
            </div>
          <% end %>
        <% when "adv" %>
          <% word.meaning.adv&.first(3)&.each_with_index do |meaning, i| %>
            <div class="carousel-item <%= 'active' if i == 0 %>">
              <%= render 'shared/word-card', word: word, index: i, meaning: meaning %>
            </div>
          <% end %>
        <% end %>
      </div>

      <a class="carousel-control-prev" href="#word-card-carousel" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#word-card-carousel" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>

  </div>
<% end %>
