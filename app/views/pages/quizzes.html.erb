<div class="week-box d-flex justify-content-center align-items-center mt-5">
  <div class="card-index-quizzes"data-words='<%= @list_of_the_week.words.count %>' data-difficulty="8" data-type="<%= %w(nouns verbs adjectives adverbs).sample %>" data-id="<%= @list_of_the_week.id %>" data-title="<%= @list_of_the_week.title %>" data-week="yes">
    <i class="fas fa-calendar-week"></i>
    <h6 id="quizz-week-title">Quizz of the week</h6>
  </div>
</div>

<div class="background-quizz mt-3">
  <div style="padding-top: 10%;">
    <div>
      <% @user_lists.each_slice(3) do |slice| %>
        <div class="d-flex justify-content-between mb-5 quizz-box">
          <% slice.each do |list| %>
          <% levels = list.words.map(&:difficulty) %>
          <% level = levels.sum.fdiv(levels.length).ceil %>
            <div class="card-index-quizzes" data-words='<%= list.words.count %>' data-difficulty="<%= level %>" data-type="<%= %w(nouns verbs adjectives adverbs).sample %>" data-id="<%= list.id %>" data-title="<%= list.title %>">
        <% luck = (2..4).to_a.sample %>
        <% case luck %>
        <% when 2 %>
          <i class="fas fa-puzzle-piece icon-quizz"></i>
        <% when 3 %>
          <i class="fas fa-trophy icon-quizz"></i>
        <% when 4 %>
          <i class="fas fa-brain icon-quizz"></i>
        <% end %>
              <h6><%= list.title %></h6>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>


<div class="d-flex justify-content-between quizz-details mt-5">
  <div style="width:33%;text-align:center;border-right: 1px solid #e8e8e8">
    <p>Words</p>
    <p id="total-word" style="text-align:center;"></p>
  </div>
  <div style="width:33%;text-align:center;border-right: 1px solid #e8e8e8">
    <p>Difficulty</p>
    <div id="img-difficulty"></div>
  </div>
  <div style="width:33%;text-align:center;">
    <p>Type</p>
    <p id="quizz-type">nouns</p>
  </div>
</div>

<div class=" container-start-quiz">
  <div class="btn-start-quizz d-flex justify-content-center align-items-center">
    <h3 id="start-quizz">START</h3>
  </div>
</div>
